
@model  FudbalskiKup.Models.Extended.LogovanjePodaci
@{
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Logovanje</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

    <style type="text/css">
        .centerDiv {
            width: 50%;
           /* height: 200px;*/
            margin: 0 auto;
            position: absolute;
            left: 25%;
            top: 20%;
            padding: 10px 10px;   
        }
        .color{
            background-color: white;
        }
        .colorBody {
            background-color: azure;
        }
    </style>

</head>
<body class="colorBody" >
    <div id="login" class="centerDiv">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-4 table-bordered color">
                    <div class="login-box col-md-12">
                        <form id="login-form" class="form" action="Logovanje" method="post">
                            <h3 class="text-center text-info">Logovanje</h3>
                            <div class="form-group">
                                <label for="username" class="text-info">Username:</label><br>
                                <input type="text" required name="KorisnickoIme" id="KorisnickoIme" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Password:</label><br>
                                <input type="password" required name="Sifra" id="Sifra" class="form-control">
                            </div>
                            <div class="form-group">
                                <input class="btn btn-info btn-md" type="submit" value="Uloguj se" />
                                <input class="btn btn-info btn-md" type="reset" value="Reset" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
   
</body>

</html>
