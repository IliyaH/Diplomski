
@{
    Layout = null;
    ViewBag.Title = "KartaPocetak";
    if (Session["KorisnikID"] == null)
    {
        Response.Redirect("~/Home/RegistracijaStranica");
    }
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kupovina Karte</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

    <style type="text/css">
        .centerDiv {
            width: 50%;
            /* height: 200px;*/
            margin: 0 auto;
            position: absolute;
            left: 25%;
            top: 20%;
            padding: 10px 10px;
        }

        .color {
            background-color: white;
        }

        .colorBody {
            background-color: azure;
        }
    </style>

</head>
<body class="colorBody">
    <div id="login" class="centerDiv">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-4 col-sm-4 col-lg-6 table-bordered color">
                <div class="login-box col-md-12">
                    <h3 class="text-center text-info">Kupi Kartu</h3>
                    <hr />
                    @using (Html.BeginForm("DodajKartu", "Karta", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label for="username" class="text-info">Izaberi utakmicu:</label>
                            <br>                   
                            <select class="form-control"  name="utakmicaID" id="utakmicaID">
                                @foreach (var utakmica in ViewBag.utakmice)
                                {
                                    <option class="form-control" value="@utakmica.Item3.ToString()"> @utakmica.Item1.ToString() : @utakmica.Item2.ToString() </option>
                                }
                            </select>
                        </div>
 
                        <div class="form-group">
                            <label for="password" class="text-info">Izaberi Cenu:</label><br>
                            <select class="form-control" name="cena" id="cena">
                                <option value="1000"> 1000 </option>
                                <option value="2000"> 2000 </option>
                                <option value="5000"> 5000 </option>
                            </select>
                        </div>
    
                        <div class="form-group">
                            <input class="btn btn-info btn-md" type="submit" value="Kupi Kartu" />
                        </div>
                    }
                       
                </div>
            </div>
        </div>
    </div>
</body>
